<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Imagen con margen superior -->

    <!-- Texto con margen superior y separaci贸n del bot贸n -->

    <ImageView
        android:id="@+id/imageToLoad"
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@null"
        android:importantForAccessibility="no"
        android:src="@drawable/goodimage" />

    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="@string/description_text"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Bot贸n con separaci贸n del borde inferior -->
    <Button
        android:id="@+id/loadImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:maxWidth="320dp"
        android:text="@string/load_image_button" />
</LinearLayout>
