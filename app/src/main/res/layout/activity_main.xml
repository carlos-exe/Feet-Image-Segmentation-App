<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d998c">

    <!-- Contenedor principal con el contenido en vertical -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Encabezado con logo y título -->
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/Mini_logo"
                android:src="@mipmap/logofinal"/>

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Imagen principal a mostrar -->
        <ImageView
            android:id="@+id/imageToLoad"
            android:layout_width="match_parent"
            android:layout_height="482dp"
            android:layout_marginTop="-40dp"
            android:contentDescription="@string/image_description"
            android:importantForAccessibility="no"
            android:src="@mipmap/logofinal" />

        <!-- Botón para cargar imagen desde la galería -->
        <Button
            android:id="@+id/loadImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="@string/load_image_button"
            android:textColor="#FFFFFF" />

        <!-- Botón para abrir la aplicación Fluke iSee -->
        <Button
            android:id="@+id/captureThermalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:text="@string/capturar_imagen_t_rmica"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Imagen pequeña en la esquina inferior izquierda -->
    <ImageView
        android:id="@+id/bottomLeftImage"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="14dp"
        android:contentDescription="@string/Escudo"
        android:src="@drawable/escudo" />


    <TextView
        android:id="@+id/GCPDS"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="45dp"
        android:text="@string/GCPDS"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/GCPDS1"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="32dp"
        android:text="@string/GCPDS1"
        android:textStyle="bold"
        android:textSize="11sp"/>

    <TextView
        android:id="@+id/GCPDS2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp"
        android:text="@string/GCPDS2"
        android:textStyle="bold"
        android:textSize="11sp"/>

</FrameLayout>
